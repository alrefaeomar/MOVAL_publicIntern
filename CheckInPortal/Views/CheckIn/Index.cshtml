@model CheckInPortal.Models.Student

@{ ViewBag.Title = "Check In Portal - MVC"; }
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<link href="~/Content/Site.css" rel="Stylesheet" type="text/css" />
<link href="~/Content/Responsive.css" rel="Stylesheet" type="text/css" />


<!--Nav Bar-->
<nav class="navbar navbar-expand-lg navbar-light bg-purple">
    <div class="container-fluid text-center align-content-center justify-content-center">
        <!-- Logo with link to Moval.edu-->
        <a class="navbar-brand" href="https://www.moval.edu/"><img class="MVC-Brand" src="~/Content/Assets/mvclogo.png" /></a>

    </div>
</nav>
<section class="CheckInPage pt-4">
    <div class="container-fluid">
        <!--Row 1 -->
        <!-- Forms to Input Student Info-->
        <div class="row flex-sm-column flex-md-column flex-lg-row">
            <div class="col col-sm col-md-12 col-lg-4">
                <div class="CheckIn col bg-light justify-content-center align-content-center rounded-lg p-5">
                    <h1 class="text-left">Missouri Valley College Check-In Service</h1>
                    <hr />
                    <!--Input Group to Search Student Info-->


                    @using (Html.BeginForm("Index", "CheckIn", FormMethod.Post))
                    {
                        <form id="CheckForm" onsubmit="return false">
                            <div class="input-group mb-3">
                                @Html.TextBox("stdSearch", null, new { @class = "form-control", placeholder = "Student ID" })
                            </div>
                            <div class="input-group mb-3">
                                @Html.TextBoxFor(model => model.stdName, new { @class = "form-control", placeholder = "Student Name", disabled = "disabled" })
                            </div>
                            <div class="input-group mb-3">
                                @Html.TextBoxFor(model => model.stdEntrance, new { @class = "form-control", placeholder = "Student Entrance", disabled = "disabled" })
                            </div>
                            <div class="input-group mb-3">
                                @Html.TextBoxFor(model => model.stdResidence, new { @class = "form-control", placeholder = "Student Residence", disabled = "disabled" })
                            </div>
                            <div class="p-2 text-center">
                                <button type="submit" id="submitBtn" class="btn btn-primary mt-4">Submit</button>
                                <button type="reset" class="btn btn-Exit mt-4">Clear Data</button>

                            </div>
                        </form>
                    }


                    <hr />

                    <!--Student Picture -->
                    <h1 class="font-weight-bold">Student</h1>
                    <div class="p-2 text-center">
                        <img class="Student-pic" src="" />
                    </div>
                    <div />

                </div>
            </div>
        </div>

        <!-- Tables where data is going to be displayed -->
        <div class="col mt-lg-0 mt-md-5 mt-sm-5 mt-xs-5">
            <div class="DataTable bg-light justify-content-center align-content-center CheckInList">
                <h1 class="font-weight-bold">CheckList </h1>
                <table class="table text-break">
                    <thead>
                        <tr>
                            <th scope="col">Office</th>
                            <th class="w-25" scope="col">Status</th>
                            <th scope="col">What to do</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">Registrar's Office (FC-133)</th>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th scope="row">Financial Aid (FC-126C)</th>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th scope="row">Business Office (FC-126B)</th>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th scope="row">Admissions (FC-126A)</th>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
                <hr>
                <!-- Student Affairs Section of the Table-->
                <h1 class="font-weight-bold">Student Affairs</h1>
                <table class="table text-break">
                    <thead>
                        <tr>
                            <th scope="col">Office</th>
                            <th class="w-25" scope="col">Status</th>
                            <th scope="col">What to do</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">Consent to Treat</th>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th scope="row">Medical Alert Info</th>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th scope="row">Immunizations</th>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th scope="row">Emergency Contact</th>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- End Row 1 -->
    </div>
</section>
